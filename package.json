{
  "name": "electron-boilerplate",
  "version": "1.0.0",
  "description": "Electron boilerplate made by me",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:win": "npm run build:win32 && npm run build:win64"
  },
  "repository": "https://github.com/Ohmry/electron-boilerplate",
  "keywords": [
    "Ohmry",
    "Electron",
    "electron",
    "boilerplate",
    "electron-boilerplate"
  ],
  "asar": true,
  "author": "Ohmry",
  "license": "MIT",
  "build": {
    "productName": "Electron Boilerplate",
    "appId": "com.github.ohmry.electron.boilerplate",
    "asar": true,
    "protocols": {
      "name": "ElectronBoilerplate",
      "schemes": [
        "ElectronBoilerplate"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/Icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  },
  "dependencies": {
    "@fontsource/ubuntu": "^4.2.1",
    "@fortawesome/fontawesome-free": "^5.15.2"
  },
  "devDependencies": {
    "bulma": "^0.9.2",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "electron-reload": "^1.5.0"
  }
}
